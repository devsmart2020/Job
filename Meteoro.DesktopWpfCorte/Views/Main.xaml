<Window
    x:Class="Meteoro.DesktopWpfCorte.Views.Main"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Meteoro.DesktopWpfCorte.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Main"
    Width="800"
    Height="450"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <StackPanel Background="WhiteSmoke">
        <Grid Height="40">
            <StackPanel Margin="20,0" HorizontalAlignment="Left">
                <ComboBox
                    Width="50"
                    VerticalAlignment="Center"
                    FontSize="15"
                    Foreground="#FFA2A2A2"
                    SelectedIndex="0">
                    <ComboBoxItem Content="EN" />
                </ComboBox>
            </StackPanel>
            <StackPanel
                Margin="20,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    VerticalAlignment="Center"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Content="FAQ"
                    FontSize="15"
                    FontWeight="Bold"
                    Foreground="#FFA2A2A2" />
                <Button
                    VerticalAlignment="Center"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Content="CONTACT"
                    FontSize="15"
                    FontWeight="Bold"
                    Foreground="#FFA2A2A2" />
                <Button
                    VerticalAlignment="Center"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Content="ORDER STATUS"
                    FontSize="15"
                    FontWeight="Bold"
                    Foreground="#FFA2A2A2" />
                <Button
                    VerticalAlignment="Center"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Content="MY ACCOUNT"
                    FontSize="15"
                    FontWeight="Bold"
                    Foreground="#FFA2A2A2" />
                <Button
                    VerticalAlignment="Center"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}">
                    <materialDesign:PackIcon
                        Width="25"
                        Height="25"
                        Foreground="#FFA2A2A2"
                        Kind="Power" />
                </Button>
            </StackPanel>
        </Grid>
        <Grid Height="100">
            <StackPanel
                Margin="10,0"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <Button
                    Uid="0"
                    Width="150"
                    Height="50"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Content="HOME"
                    Foreground="#FF2196F3" />
                <Button
                    Uid="1"
                    Width="150"
                    Height="50"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Content="SHOP"
                    Foreground="#FF2196F3" />
                <Button
                    Uid="2"
                    Width="150"
                    Height="50"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Content="BLOG"
                    Foreground="#FF2196F3" />
                <Button
                    Uid="3"
                    Width="150"
                    Height="50"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Content="PAGES"
                    Foreground="#FF2196F3" />
                <Button
                    Uid="4"
                    Width="150"
                    Height="50"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Content="PRODUCTS"
                    Foreground="#FF2196F3" />
                <Button
                    Uid="5"
                    Width="150"
                    Height="50"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Content="BRANDS"
                    Foreground="#FF2196F3" />
                <Button
                    Uid="6"
                    Width="150"
                    Height="50"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Content="GIFT CARDS"
                    Foreground="#FF2196F3" />
            </StackPanel>
            <Grid
                x:Name="GridCursor"
                Width="150"
                Height="5"
                Margin="10,0"
                HorizontalAlignment="Left"
                Background="#FF2196F3" />
        </Grid>
        <Grid
            x:Name="GridMain"
            Height="460"
            Background="Aquamarine" />
    </StackPanel>
</Window>
